{
  "manifest_version": 3,

  "name": "chrome-extension-ts-starter",
  "description": "ðŸš™ A starter for developing a Chrome Extension with TypeScript (only, without React) + Webpack + TailwindCSS + ESLint + Prettier.",
  "version": "1.0.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "permissions": ["storage"],

  "host_permissions": ["<all_urls>"]
}
